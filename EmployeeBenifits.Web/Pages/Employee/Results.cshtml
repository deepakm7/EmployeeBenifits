@page "/employee/results/{id:int?}/"
@model EmployeeBenifits.Web.Pages.Employee.ResultsModel
@{
    ViewData["Title"] = "Benifts Summary";
}
<div class="container">

    <div class="row">
        <div class="col-sm-12">
            <h2>Benifts Summary</h2>
        </div>
    </div>

    <div class="mt-3"></div>

    <div class="row">
        <div class="col-sm-12">
            <h4>Employee Information</h4>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-4">
            <label>First Name:</label>&nbsp;
            <label>@Model.DetailModel.EmployeeDetails.FirstName</label>&nbsp;
        </div>
        <div class="col-sm-4">
            <label>Last Name:</label>&nbsp;
            <label>@Model.DetailModel.EmployeeDetails.LastName</label>&nbsp;
        </div>
        <div class="col-sm-4">
            <label>Salary:</label>&nbsp;
            <label>@Model.DetailModel.EmployeeDetails.Salary</label>&nbsp;
        </div>
    </div>

    @if (Model.DetailModel.EmployeeDetails.Dependents != null && Model.DetailModel.EmployeeDetails.Dependents.Count > 0)
    {
        <div class="mt-3"></div>
        <div class="row">
            <div class="col-sm-12">
                <h4>Dependent Information</h4>
            </div>
        </div>

        for (int i = 0; i <= Model.DetailModel.EmployeeDetails.Dependents.Count - 1; i++)
        {
            <div class="row">
                <div class="col-sm-4">
                    <label>First Name:</label>&nbsp;
                    <label>@Model.DetailModel.EmployeeDetails.Dependents[i].FirstName</label>&nbsp;
                </div>
                <div class="col-sm-4">
                    <label>Last Name:</label>&nbsp;
                    <label>@Model.DetailModel.EmployeeDetails.Dependents[i].LastName</label>&nbsp;
                </div>
                <div class="col-sm-4">
                    <label>Dependent Type:</label>&nbsp;
                    <label>@Model.DetailModel.EmployeeDetails.Dependents[i].DependentType</label>&nbsp;
                </div>
            </div>
        }
    }

    <div class="mt-3"></div>

    <div class="row">
        <div class="col-sm-12">
            <h4>Benifit Information</h4>
        </div>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th>Summary</th>
                    <th>Per Paycheck</th>
                    <th>Per Year</th>
                </tr>
                <tr>
                    <td>Total Salary Per Pay Check Before Deduction</td>
                    <td>@Model.DetailModel.TotalSalaryPerPayCheckBeforeBenifit</td>
                    <td>@Model.DetailModel.EmployeeDetails.Salary</td>
                </tr>
                <tr>
                    <td>Employee Benifit Per Pay check</td>
                    <td>@Model.DetailModel.EmployeeBenifitPerPaycheck</td>
                    <td>@Model.DetailModel.EmployeeBenifitPerYear</td>
                </tr>
                <tr>
                    <td>Dependent(s) Benifit Per Pay check</td>
                    <td>@Model.DetailModel.TotalDependentsBenifitPerPayCheck</td>
                    <td>@Model.DetailModel.TotalDependentsBenifitPerYear</td>
                </tr>
                <tr>
                    <td>Total Salary Per Pay Check After Deduction</td>
                    <td>@Model.DetailModel.TotalSalaryPerPayCheckAfterBenifit</td>
                    <td>@Model.DetailModel.TotalSalaryPerYearAfterBenifit</td>
                </tr>
            </thead>
        </table>
    </div> 

    <div class="col-md-12 text-right">
        <a href="/employee/search" class="btn btn-secondary" title="Close">Close</a> 
    </div>
</div>